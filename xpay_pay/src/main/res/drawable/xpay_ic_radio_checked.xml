<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:state_pressed="true">
                <shape android:shape="oval" >
                    <solid android:color="@color/ouer_color_accent_secondary" />
                    <size android:width="48dp" android:height="48dp"/>
                </shape>
            </item>

            <item >
                <shape android:shape="oval" >
                    <solid android:color="@color/ouer_color_transparent" />
                    <size android:width="48dp" android:height="48dp"/>
                </shape>
            </item>
        </selector>
    </item>


    <item android:bottom="14dp"
          android:right="14dp"
          android:top="14dp"
          android:left="14dp">
        <shape android:shape="oval" >
            <stroke android:width="2dp" android:color="@color/ouer_color_accent"/>
            <solid android:color="@android:color/white" />
        </shape>
    </item>

    <item android:bottom="19dp"
          android:right="19dp"
          android:top="19dp"
          android:left="19dp">
        <shape android:shape="oval" >
            <solid android:color="@color/ouer_color_accent" />
        </shape>
    </item>

</layer-list>