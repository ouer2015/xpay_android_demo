<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
   	android:layout_height="match_parent">
	<com.ouertech.android.sails.ouer.ui.widget.ProgressWheel
		android:id="@+id/ouer_id_progress"
		android:layout_width="80dp"
		android:layout_height="80dp"
		android:layout_centerInParent="true"
		app:matProg_barColor="@color/ouer_color_primary"
		app:matProg_progressIndeterminate="true"
		android:visibility="gone"/>
    <TextView 
        android:id="@+id/ouer_id_retry"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerInParent="true"
    	android:text="@string/ouer_string_retry"
    	android:textColor="@color/ouer_color_black_hint_text"
    	android:textSize="@dimen/ouer_font_msize"
    	android:drawableTop="@drawable/ouer_ic_retry"
    	android:drawablePadding="20dp"
    	android:visibility="gone"/>
</RelativeLayout>